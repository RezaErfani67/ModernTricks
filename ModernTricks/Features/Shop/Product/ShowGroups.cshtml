@model IEnumerable<ModernTricks.Models.Product_Groups>

<div class="list-group" style="margin-top: 15px">
    <a href="#" class="list-group-item active">
        گروه محصولات
    </a>
  @foreach (var item in Model)
  {
    <a href="#" class="list-group-item">@item.GroupTitle
    <label class="badge">@item.Products.Count</label>
    </a>
  }

</div>
