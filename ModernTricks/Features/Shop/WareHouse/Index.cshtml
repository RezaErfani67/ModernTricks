@model IEnumerable<ModernTricks.Models.ViewModel.WareHouseItem>

@{
    ViewBag.Title = "فهرست " + Server.HtmlDecode(Html.DisplyModelPluralName(model => model).ToString());
}

<table class="table">
    <tr>

        <th>
            نام کالا
        </th>
        <th>
            گروه
        </th>
        <th>
            قیمت
        </th>
        <th>
            ویرایش
        </th>
        <th>
            حذف
        </th>
        <th>
            گزارش
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>

            <td>
                <a class="btn btn-warning onclick="Edit(@item.ProductID)">ویرایش</a>

            </td>
            <td>
                @Html.ActionLink("حذف", "Delete", new { id = @item.ProductID }, new { @class = "btn btn-danger" })
            </td>
            <td>
                <a  href="/WareHouse/Create/@item.ProductID" class="btn btn-default">ثبت موجودی انبار</a>
               
            </td>
            <td>
                <a href="/WareHouse/Report/@item.ProductID" class="btn btn-primary">گزارش انبار</a>

            </td>
        </tr>
    }

</table>
