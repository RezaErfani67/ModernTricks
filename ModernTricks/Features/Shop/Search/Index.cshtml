@model IEnumerable<ModernTricks.Models.Products>
@{
    ViewBag.Title = "Index";
}

@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="/Images/ProductImages/Thumb/@item.Productimage" alt="@item.Title" style="width: 100%;height: 180px">
            <div class="caption">
                <h3>@item.Title</h3>
                <p>@item.ShortDescription</p>
                <p>
                    <a href="/Product/ShowProduct/@item.ProductID" class="btn btn-primary" role="button">جزئیات</a>
                    <a href="#" class="btn btn-default" role="button">خرید</a>
                    <a href="#" class="btn btn-warning" role="button">مقایسه</a>
                </p>
            </div>
        </div>
    </div>
}


