@model ModernTricks.Models.REPORTS
@{
    ViewBag.Title = "Report Details";
    Layout = "~/Features/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='button']").button();
    });
</script>
<div class="panel">
    <fieldset>
        <legend>
            <h3>
                Report Details
            </h3>
        </legend>
        <div>
            <table style='width: 100%'>
                <tr>
                    <td style='width: 15%; font-weight: bold' class='reportTable'>
                        @Html.LabelFor(model => model.ReportName, "Name")
                    </td>
                    <td class='userTable'>
                        @Html.DisplayFor(model => model.ReportName)
                    </td>
                </tr>
                <tr>
                    <td style='width: 100px; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.Inactive, "Inactive Report")
                    </td>
                    <td class='userTable'>
                        @Html.DisplayFor(model => model.Inactive)
                        @Html.ValidationMessageFor(model => model.Inactive)
                    </td>
                </tr>
                <tr>
                    <td style='font-weight: bold' class='reportTable'>
                        @Html.LabelFor(model => model.ReportDescription, "Description")
                    </td>
                    <td class='userTable'>
                        @Html.DisplayFor(model => model.ReportDescription)
                    </td>
                </tr>
                <tr>
                    <td style='font-weight: bold' class='reportTable'>
                        @Html.LabelFor(model => model.Template, "Template Name")
                    </td>
                    <td class='userTable'>
                        @Html.DisplayFor(model => model.Template)
                    </td>
                </tr>

                <tr>
                    <td style='font-weight: bold' class='reportTable'>
                        @Html.LabelFor(model => model.StoredProcedureName, "Stored Procedure Name")
                    </td>
                    <td class='userTable'>
                        @Html.DisplayFor(model => model.StoredProcedureName)
                    </td>
                </tr>
            </table>
            <br />
            <input type="button" value="Edit Report" onclick="location.href='@Url.Action("ReportEdit", "Admin", new { id = Model.Report_Id })'" />
        </div>
        <br />
    </fieldset>
    <div>
        <fieldset>
            <legend>
                <h3>
                    Roles Associated with this Report
                </h3>
            </legend>
            <div id="RolesTable">
                @Html.Partial("_ListRolesTable4Report", Model)
            </div>
        </fieldset>
    </div>

    <div>
        <fieldset>
            <legend>
                <h3>
                    Report Filter Parameters Associated with this Report
                </h3>
            </legend>
            <div id="ParamsTable">
                @Html.Partial("_ListParamsTable4Report", Model)
            </div>
        </fieldset>
    </div>
</div>
<div>
    @Html.ActionLink("Go to Reports", "ReportIndex", "Admin")
</div>