@model ModernTricks.Models.USERS
@{
    ViewBag.Title = "Edit " + Model.ReportName + " Report";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
        $(":input[type='button']").button();
    });
</script>
<div class="panel">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Report_Id)
        <fieldset>
            <legend>
                <h3>
                    Report Details
                </h3>
            </legend>
            <div>
                <table style='width: 100%'>
                    <tr>
                        <td style='width: 150px;font-weight: bold'>
                            @Html.LabelFor(model => model.ReportName)
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.ReportName, new { @class = "singlelinetextinput" })
                            @Html.ValidationMessageFor(model => model.ReportName)
                        </td>
                    </tr>
                    <tr>
                        <td style='font-weight: bold'>
                            @Html.LabelFor(model => model.Inactive)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.Inactive)
                            @Html.ValidationMessageFor(model => model.Inactive)
                        </td>
                    </tr>
                    <tr>
                        <td style='font-weight: bold'>
                            @Html.LabelFor(model => model.ReportDescription, new { style = "vertical-align:top" })
                        </td>
                        <td>
                            @Html.TextAreaFor(model => model.ReportDescription, new { @class = "multilinetextinput" })
                            @Html.ValidationMessageFor(model => model.ReportDescription)
                        </td>
                    </tr>                   
                    <tr>
                        <td style='font-weight: bold'>
                            @Html.LabelFor(model => model.Template, new { style = "vertical-align:top" })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.Template, new { @class = "singlelinetextinput" })
                            @Html.ValidationMessageFor(model => model.Template)
                        </td>
                    </tr>
                    <tr>
                        <td style='font-weight: bold'>
                            @Html.LabelFor(model => model.StoredProcedureName, new { style = "vertical-align:top" })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.StoredProcedureName, new { @class = "singlelinetextinput" })
                            @Html.ValidationMessageFor(model => model.StoredProcedureName)
                        </td>
                    </tr>
                </table>
                <br />
                <input type="submit" value="Save" />
        </fieldset>
    }

    <div>
        <fieldset>
            <legend>
                <h3>
                    Roles Associated with this Report
                </h3>
            </legend>
            <div id="RolesTable">
                @Html.Partial("_ListRolesTable4Report", Model)
            </div>
            <div>
                @Html.Partial("_AddRole2RolesTable4Report", Model)
            </div>
        </fieldset>
    </div>

</div>


<div class="panel">
    @Html.Partial("_ListParamTable", Model)
</div>
<br />
<div>
    @Html.ActionLink("Go to Reports", "ReportIndex", "Admin")
</div>
