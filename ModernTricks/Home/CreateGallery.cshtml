@model Main.Features.Home.GalleyVideoViewModel
@{
    ViewBag.Title = "CreateGallery";
  
}
<div class="container">
@using (Html.BeginForm("CreateGallery","Home",FormMethod.Post, new {enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>ایجاد گالری تصاویر</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("برچسب", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gallry.Alt , new { htmlAttributes = new { @class = "form-control" , @Name="Alt" }})
                @Html.ValidationMessageFor(model => model.Gallry.Alt, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("آپلود فایل", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div id="multiple">
                    <input type="file" class="form-control multiple" name="files" multiple />
                </div>
                <div id="single">
                    <input type="file" class="single" name="files" /><br />
                    <input type="file" class="single" name="files" /><br />
                    <input type="file" class="single" name="files" /><br />
                </div>
            </div>
           
        </div>
        <div class="form-group">
            @Html.Label("آیا در اسلایدر استفاده می شود؟", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gallry.IsUsedInSlider, new { htmlAttributes = new { @class = "form-control", @Name = "IsUsedInSlider" } })
                @Html.ValidationMessageFor(model => model.Gallry.IsUsedInSlider, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت" class="btn btn-default" />
            </div>
        </div>
    </div>
}
